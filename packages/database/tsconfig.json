{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "composite": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "rootDir": "src",
        "outDir": "build",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "compilerOptions": {
          "module": "ESNext"
        }
      }
}