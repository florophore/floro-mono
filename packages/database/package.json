{
  "name": "@floro/database",
  "version": "1.0.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc --build",
    "clean": "rimraf build tsconfig.tsbuildinfo",
    "build": "yarn clean && yarn tsc",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "NODE_ENV=test node node_modules/.bin/mocha src/**/*.spec.ts --timeout 5000 --exit",
    "test:coverage": "nyc npm run test",
    "test:inspect": "NODE_ENV=test node node_modules/.bin/mocha inspect src/**/*.spec.ts",
    "typeorm": "npx typeorm-ts-node-esm --dataSource src/datasource.ts",
    "typeorm:migrate": "yarn typeorm migration:run",
    "typeorm:generate": "yarn typeorm migration:generate src/migrations/$NAME --timestamp",
    "typeorm:revert": "yarn typeorm migration:revert"
  },
  "dependencies": {
    "chai-as-promised": "^7.1.1",
    "class-validator": "^0.13.2",
    "inversify": "^6.0.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^4.1.0",
    "typeorm": "^0.3.7",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.2",
    "chai": "^4.3.6",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typeorm-fixtures-cli": "^3.0.0",
    "typescript": "^4.6.4"
  }
}
