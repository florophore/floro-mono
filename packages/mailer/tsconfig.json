{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "composite": true,
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "Node",
        "rootDir": ".",
        "outDir": "build",
        "jsx": "react-jsx",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "dev/**/*.ts",
        "dev/**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "compilerOptions": {
          "module": "ESNext"
        }
      }
}