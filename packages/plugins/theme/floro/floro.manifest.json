{
  "version": "0.0.41",
  "name": "theme",
  "displayName": "Theme",
  "description": "A plugin for mapping color constants to themes.",
  "icon": {
    "light": "./theme.unselected.light.svg",
    "dark": "./theme.unselected.dark.svg",
    "selected": {
      "light": "./theme.selected.light.svg",
      "dark": "./theme.selected.dark.svg"
    }
  },
  "imports": {
    "palette": "0.0.41"
  },
  "types": {
    "Theme": {
      "id": {
        "type": "string",
        "isKey": true
      },
      "name": {
        "type": "string"
      },
      "backgroundColor": {
        "hexcode": {
          "nullable": false,
          "type": "string"
        }
      }
    },
    "ThemeColor": {
      "id": {
        "type": "string",
        "isKey": true
      },
      "name": {
        "type": "string"
      },
      "includeVariants": {
        "type": "boolean",
        "default": false
      },
      "themeDefinitions": {
        "type": "set",
        "bounded": true,
        "values": "ThemeDef"
      },
      "variants": {
        "type": "set",
        "bounded": true,
        "values": "ThemeColorStateVariant"
      }
    },
    "StateVariant": {
      "id": {
        "type": "string",
        "isKey": true
      },
      "name": {
        "type": "string"
      }
    },
    "ThemeColorStateVariant": {
      "id": {
        "type": "ref<$.stateVariants.values>",
        "isKey": true
      },
      "variantDefinitions": {
        "type": "set",
        "bounded": true,
        "values": {
          "id": {
            "type": "ref<$.themes.values>",
            "isKey": true
          },
          "paletteColorShade": {
            "type": "ref<palette.ColorShade>",
            "nullable": true,
            "onDelete": "nullify"
          },
          "alpha": {
            "nullable": true,
            "type": "int",
            "default": 255
          }
        }
      }
    },
    "ThemeDef": {
      "id": {
        "type": "ref<$.themes.values>",
        "isKey": true
      },
      "paletteColorShade": {
        "type": "ref<palette.ColorShade>",
        "nullable": false,
        "onDelete": "nullify"
      },
      "alpha": {
        "nullable": true,
        "type": "int",
        "default": 255
      }
    }
  },
  "store": {
    "themes": {
      "type": "set",
      "values": "Theme"
    },
    "themeColors": {
      "type": "set",
      "values": "ThemeColor"
    },
    "stateVariants": {
      "type": "set",
      "values": "StateVariant"
    }
  },
  "seed": {
    "themes": [
      {
        "id": "light",
        "name": "Light",
        "backgroundColor": {
          "hexcode": "#FFFFFF"
        }
      },
      {
        "id": "dark",
        "name": "Dark",
        "backgroundColor": {
          "hexcode": "#000000"
        }
      }
    ],
    "themeColors": [
      {
        "id": "primary-color",
        "name": "Primary Color",
        "includeVariants": true,
        "themeDefinitions": [],
        "variants": []
      },
      {
        "id": "primary-font-color",
        "name": "Primary Font Color",
        "includeVariants": true,
        "themeDefinitions": [],
        "variants": []
      },
      {
        "id": "secondary-color",
        "name": "Secondary Color",
        "includeVariants": true,
        "themeDefinitions": [],
        "variants": []
      },
      {
        "id": "secondary-font-color",
        "name": "Secondary Font Color",
        "includeVariants": true,
        "themeDefinitions": [],
        "variants": []
      }
    ],
    "stateVariants": [
      {
        "id": "hovered",
        "name": "Hovered"
      },
      {
        "id": "selected",
        "name": "Selected"
      },
      {
        "id": "focused",
        "name": "Focused"
      }
    ]
  }
}