{
  "name": "@floro/main-web",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node .",
    "start:debug": "NODE_ENV=production node --inspect-brk .",
    "dev": "NODE_ENV=development nodemon -e ts --watch ../ --experimental-specifier-resolution=node main.ts",
    "dev:debug": "NODE_ENV=development node --inspect-brk --experimental-specifier-resolution=node --loader ts-node/esm main.ts",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:ssr": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "preview": "vite preview",
    "typecheck": "tsc --incremental main.ts --tsBuildInfoFile tsconfig.tsbuildinfo --isolatedModules --experimentalDecorators"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@floro/styles": "1.0.0",
    "apollo-server": "^3.10.1",
    "apollo-server-express": "^3.10.1",
    "http-proxy-middleware": "^2.0.6",
    "inversify": "^6.0.1",
    "isomorphic-fetch": "^3.0.0",
    "maildev": "^2.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "reflect-metadata": "^0.1.13",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.1",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.0",
    "typescript": "^4.6.4",
    "vite": "^3.0.0"
  }
}
