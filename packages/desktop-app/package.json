{
  "name": "@floro/desktop-app",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run build:oauth",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "build:oauth": "cd ./packages/oauth && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "test:oauth": "vitest run -r packages/oauth --passWithNoTests",
    "watch": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,mjs,cjs,ts,tsx,mts,cts",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck:oauth": "tsc --noEmit -p packages/oauth/tsconfig.json",
    "typecheck": "yarn typecheck:main && npm run typecheck:preload && npm run typecheck:renderer && npm run typecheck:oauth",
    "postinstall:manual": "npx cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,tsx,mts,cts,json}\""
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/apollo-upload-client": "^17.0.2",
    "@types/js-cookie": "^3.0.2",
    "@types/mixpanel-browser": "^2.38.0",
    "@types/react-transition-group": "^4.4.5",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@vitejs/plugin-react": "2.0.1",
    "cross-env": "7.0.3",
    "electron": "24.1.1 ",
    "electron-builder": "23.3.3",
    "esbuild-plugins-node-modules-polyfill": "^1.4.0",
    "eslint": "8.21.0",
    "happy-dom": "6.0.4",
    "nano-staged": "0.8.0",
    "playwright": "1.26.0",
    "rollup-plugin-node-externals": "^6.1.1",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "simple-git-hooks": "2.8.0",
    "typescript": "4.7.4",
    "unplugin-auto-expose": "0.0.2",
    "vite": "3.0.4",
    "vite-plugin-node-polyfills": "^0.9.0",
    "vitest": "0.23.4"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@apollo/react-hooks": "^4.0.0",
    "@emotion/css": "^11.10.0",
    "@emotion/react": "^11.10.0",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "apollo-upload-client": "^17.0.0",
    "dotenv": "^16.3.1",
    "electron-acrylic-window": "^0.5.11",
    "electron-updater": "5.2.1",
    "esbuild-plugins-node-modules-polyfill": "^1.4.0",
    "floro": "0.0.7",
    "framer-motion": "^10.10.0",
    "http-terminator": "^3.2.0",
    "isomorphic-fetch": "^3.0.0",
    "js-cookie": "^3.0.1",
    "mixpanel-browser": "^2.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-transition-group": "^4.4.5",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "socket.io": "^4.5.2",
    "whatwg-fetch": "^3.6.2"
  }
}
