{
    "name": "floro-backend",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "lerna": "^4.0.0"
    },
    "scripts": {
        "database": "yarn workspace @floro/database",
        "database:build": "yarn database build",
        "database:test": "yarn database test",
        "config-repo": "yarn workspace @floro/config",
        "config-repo:build": "yarn config-repo build",
        "graphql-schemas": "yarn workspace @floro/graphql-schemas",
        "graphql-schemas:build": "yarn graphql-schemas build",
        "styles": "yarn workspace @floro/styles",
        "styles:build": "yarn styles build",
        "backend": "yarn workspace @floro/backend",
        "backend:build": "yarn backend build",
        "backend:test": "yarn backend test",
        "redis": "yarn workspace @floro/redis",
        "redis:build": "yarn redis build",
        "redis:test": "yarn redis test",
        "storybook": "yarn workspace @floro/storybook",
        "mailer": "yarn workspace @floro/mailer",
        "mailer:dev": "yarn mailer dev",
        "mailer:test": "yarn mailer test",
        "mailer:build": "yarn mailer build",
        "main-web": "yarn workspace @floro/main-web",
        "main-web:build": "yarn main-web build",
        "admin-web": "yarn workspace @floro/admin-web",
        "admin-web:build": "yarn admin-web build",
        "build:common": "yarn graphql-schemas:build; yarn config-repo:build; yarn styles:build; yarn database:build; yarn redis:build; yarn mailer:build; yarn backend:build",
        "build:main": " yarn build:common; yarn main-web:build",
        "build:admin": "yarn build:common; yarn admin-web:build",
        "build:all": "yarn build:common; yarn main-web:build; yarn admin-web:build",
        "test": "yarn database:test; yarn redis:test; yarn mailer:test; yarn backend:test",
        "main:dev": "yarn main-web dev",
        "main:start": "yarn main-web start",
        "admin:dev": "yarn admin-web dev",
        "admin:start": "yarn admin-web start"
    },
    "dependencies": {
        "@apollo/client": "^3.6.9",
        "@apollo/react-hooks": "^4.0.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0"
    }
}
